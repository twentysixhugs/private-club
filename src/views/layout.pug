doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    header.header
      nav.nav(class=`${user ? 'nav--authenticated' : ''}`) 
        a.nav__title-link(href="/") Private Club
        if (!user)
          //- User is not logged in
          div.nav__links
            a.nav__link(href="log-in") Log in
            a.nav__link(href="sign-up") Sign up
        else
          //- User is logged in
          div.nav__links
            if (isMember)
              a.link(href="new-message") Create a message
            a.nav__link(href="become-member") Become a member
            a.nav__link(href="become-admin") Become an admin
          div.nav__account
            img.nav__user-avatar
            form(method="POST" action="logout" nav__inline)
              button.nav__link.nav__link--btn(type="submit" role="link") Log out
    block content
